{
	"name": "better-auth-sdks",
	"scripts": {
		"dev": "bun run --hot src/index.ts",
		"start": "bun run src/index.ts",
		"generate:python": "openapi-generator-cli generate -i http://localhost:3000/api/auth/open-api/generate-schema -g python -o sdks/python -p packageName=better_auth --skip-validate-spec --library=asyncio",
		"generate-sdk:python": "concurrently --success-first --kill-others \"pnpm run start\" \"pnpm run generate:python && pnpm run fix:python\"",
		"fix:python": "node scripts/replace.js sdks/python/pyproject.toml \"NoLicense\" \"Unlicense\""
	},
	"dependencies": {
		"@better-auth/sso": "^1.3.12",
		"@openapitools/openapi-generator-cli": "^2.23.4",
		"better-auth": "^1.3.9",
		"concurrently": "^9.2.1",
		"hono": "^4.9.6",
		"hono-pino": "^0.10.2",
		"pino": "^9.9.5"
	},
	"devDependencies": {
		"@types/bun": "latest"
	}
}
